pipeline {
    agent any

    environment {
        NODE_ENV = 'test'
    }

    stages {

        stage('Checkout SCM') {
            steps {
                echo "Checking out code..."
                checkout scm
            }
        } 

        stage('Unit Tests - Backend') {
            steps {
                echo "Running backend Go tests..."
                // Run Go tests directly on the agent
                sh 'go test ./...'
            }
        }

        stage('Unit Tests - Frontend') {
            steps {
                echo "Running frontend React tests..."
                dir('bugtracker-frontend') {
                    sh 'npm install'
                    sh 'npm test -- --coverage --coverageReporters=text-summary --coverageReporters=text --coverageReporters=html --reporters=default --reporters=jest-junit'
                }
            }
        }

    }

    post {
        always {
            echo "Archiving frontend test results..."
            junit 'bugtracker-frontend/test-results/**/*.xml'  // Adjust path if needed
        }
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed. Check test results for details."
        }
    }
}
