pipeline {
    agent any

    stages {
        stage('Unit Tests - Backend') {
            agent {
                docker {
                    image 'snakee/golang-junit:1.21'
                    reuseNode true
                }
            }
            environment {
                // Go build cache and module cache inside workspace
                GOCACHE = "${WORKSPACE}/.gocache"
                GOPATH  = "${WORKSPACE}/.gopath"
            }
            steps {
                dir('bugtracker-backend') {
                    // Create cache directories and run tests
                    sh '''
                        mkdir -p $GOCACHE
                        mkdir -p $GOPATH
                        go test -v ./...
                    '''
                }
            }
        }
    }
}
