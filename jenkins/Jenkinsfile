pipeline {
    agent any

    stages {
        stage('Unit Tests - Backend') {
            agent {
                docker {
                    image 'snakee/golang-junit:1.21'
                    reuseNode true
                }
            }
            environment {
                // Set Go build cache to workspace to avoid permission issues
                GOCACHE = "${WORKSPACE}/.gocache"
            }
            steps {
                dir('bugtracker-backend') {
                    // Make sure cache directory exists
                    sh 'mkdir -p $GOCACHE'
                    
                    // Run Go unit tests
                    sh 'go test -v ./...'
                }
            }
        }
    }
}
