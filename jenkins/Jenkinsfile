pipeline {
    agent {
        docker {
            image 'golang:1.22'  // or your preferred Go version
            args '-v /go/pkg/mod' // optional cache
        }
    }

    stages {
        stage('Run Backend Tests') {
            steps {
                dir('bugtracker-backend') {
                    sh 'go version'
                    sh 'go test -v ./...'
                }
            }
        }
    }
}
